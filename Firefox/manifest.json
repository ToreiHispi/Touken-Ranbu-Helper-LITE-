{
  "name": "Touken Ranbu Helper (LITE)",
  "manifest_version": 2,
  "version": "1.8.2",
  "devtools_page": "devtools/devtools.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "web_accessible_resources": ["*",	"assets/icon.png"],
  "background": {
    "scripts": ["thirdparty/lodash.js", "devtools/panel/app/inject.js"]
  },
  "icons": {
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "*://pc-play.games.dmm.com/play/tohken/*",
    "*://*.johren.net/games/tohken-en/play/*",
    "*://*.touken-ranbu.jp/*",
    "*://*.touken.johren.net/*",
    "notifications",
    "alarms",
    "tabs"
  ],
  "description": "A simple browser extension that displays sword teams, forge, repairs, and equip information."
}
