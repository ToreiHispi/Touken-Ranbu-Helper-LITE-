{
  "name": "Tohken Ranbu Helper(Beta)",
  "manifest_version": 2,
  "version": "1.7",
  "devtools_page": "devtools/devtools.html",
  "content_security_policy": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval';  connect-src *; frame-src *;",
  "web_accessible_resources":
  [
    "*",
	"assets/icon.png"
  ],
  "background": {
    "scripts": ["thirdparty/lodash.js", "devtools/panel/app/inject.js"]
  },
  "icons": {
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "*://pc-play.games.dmm.com/play/tohken/*",
    "*://*.touken-ranbu.jp/*",
    "notifications",
    "alarms",
    "tabs"
  ],
  "description": "A simple browser extension that displays sword teams, forge, repairs, and equip information."
}
